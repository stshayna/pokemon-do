<div class="container py-5">
  <h3 class="card-heading ps-1 pt-4 pb-3">My Pokémons (<%= @owner_pokemons.count %>)</h3>

  <div class="cards pokemons">
    <% if @owner_pokemons.exists? %>
      <% @owner_pokemons.each do |pokemon| %>
        <div class="card-pokemon shadow rounded">

          <div class="white-card shadow">
            <%= image_tag pokemon.image_url, alt: pokemon.name, class: "card-pokemon-img rounded-top" %>
          </div>

          <%# <img src= "https://images.unsplash.com/photo-1605979399824-542335ee35d5?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80" alt=""> %>
          <div class="card-pokemon-details">
            <div>
              <h4><%= pokemon.name %></h4>
              <p><%= pokemon.description %></p>
            </div>
            <div class="text-end">
              <%= link_to "Edit", edit_pokemon_path(pokemon), class: "my-pokemons-button" %>
              <%= link_to "Delete", pokemon_path(pokemon), method: :delete, data: { confirm: "Are you sure you want to delete this Pokémon?" }, class: "my-pokemons-button" %>
              <h5 class="">$<%= pokemon.price %> / day<h5>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-muted">You have not added any Pokémons.</p>
    <% end %>
  </div>
</div>
